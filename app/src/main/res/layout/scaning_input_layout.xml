<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout style="@style/AppCustomBar">

        <TextView
            android:id="@+id/Back"
            style="@style/AppCustomBarBack" />

        <TextView
            android:id="@+id/BarText"
            style="@style/AppCustomBarText"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/ScanInputLibrary" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_State"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/SelectItemYellow"
                android:gravity="center"
                android:text="@string/PleaseScanInput"
                android:textColor="@color/Black"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:background="@color/ScanGray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/DeliverGoodsNumber" />

                    <TextView
                        android:id="@+id/TV_DeliverGoodsNumber"
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <TextView
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/Time" />

                    <TextView
                        android:id="@+id/TV_Time"
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/House" />

                    <Spinner
                        android:id="@+id/Sp_house"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:layout_weight="5">
                    </Spinner>

                    <TextView
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/BusType" />

                    <TextView
                        android:id="@+id/TV_BusType"
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/Unit" />

                    <TextView
                        android:id="@+id/TV_Unit"
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <TextView
                        android:id="@+id/TV_Unit1"
                        style="@style/ScanOutLibraryText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8" />

                </LinearLayout>

            </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="0.1"
        android:background="@color/Black"
        android:orientation="vertical">


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_ScanInfoTable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1.3"
                android:background="@drawable/edittext_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/ScanBlueText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="@string/OutLibraryScanDetail"
                        android:textColor="@color/Black" />


                    <TextView
                        android:id="@+id/TV_AlreadyScanSum"
                        style="@style/ScanBlueText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/Black" />

                    <CheckBox
                        android:id="@+id/IsUserName_CB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="3dp"
                        android:background="@drawable/checkselect"
                        android:button="@null"/>
                    <TextView
                        android:id="@+id/TV_AlreadyScanSum1"
                        style="@style/ScanBlueText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/Black" />

                </LinearLayout>

                </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_GetInfoTable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/TV_Submit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/circularbead_purple"
                android:gravity="center"
                android:text="@string/Submit"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

