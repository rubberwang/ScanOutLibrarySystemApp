<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SelectOutLibraryItem"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/materID"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_materID"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textSize="13sp" />

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/nameRoot"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_nameRoot"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textSize="13sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/statistics"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_statistics"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"

            android:textSize="13sp" />

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/shouldSend"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_shouldSend"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/alreadySend"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_alreadySend"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"

            android:textSize="13sp" />

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/thisSend"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_thisSend"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textSize="13sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <TextView
            style="@style/SelectItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/noSend"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TV_noSend"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/TV_kongbai"
            style="@style/SelectItemContentText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"

            android:textSize="13sp" />

    </LinearLayout>



</LinearLayout>